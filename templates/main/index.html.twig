{% extends 'base.html.twig' %}

{% block title %}Accueil - Sortir.com{% endblock %}

{% block body %}
    <div class="container mt-2 text-center w-75">
        {% if app.user %}
            <h1 class="mb-3">Bienvenue, {{ app.user.firstName }} 👋</h1>
            <p class="lead">Vous êtes connecté. Accédez dès maintenant aux événements et fonctionnalités de votre site sortir.com</p>
        {% else %}
            <h1 class="mb-3">Bienvenue sur le portail étudiant 🎓</h1>
            <p class="lead">Connectez-vous pour accéder aux événements, à votre profil et aux outils réservés aux étudiants.</p>
            <a href="{{ path('app_login') }}" class="btn btn-primary mt-2">Se connecter</a>
        {% endif %}
            <!-- Bootstrap Carousel -->
            <div id="schoolCarousel" class="carousel slide mt-3 mx-auto" data-bs-ride="carousel" style="max-width: 70%; max-height: 20%;">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="{{ asset('images/carousel1.jpg') }}" class="rounded" alt="pic 1">
                    </div>
                    <div class="carousel-item">
                        <img src="{{ asset('images/carousel2.jpg') }}" class="rounded" alt="pic 2">
                    </div>
                    <div class="carousel-item">
                        <img src="{{ asset('images/carousel3.jpg') }}" class="rounded" alt="pic 3">
                    </div>
                </div>

                <!-- Controls -->
                <button class="carousel-control-prev" type="button" data-bs-target="#schoolCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Précédent</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#schoolCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Suivant</span>
                </button>
            </div>

    </div>
{% endblock %}
