{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-lg-5 justify-content-center">
            <div class="col-lg-5">
                <div class="card">
                    <div class="card-body">
                        <h1 class="h3 mb-3 font-weight-normal text-center">Réinitialisez votre mot de passe</h1>

                        {% for flash_error in app.flashes('reset_password_error') %}
                            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                        {% endfor %}

                        {{ form_start(requestForm) }}

                        <label for="{{ requestForm.email.vars.id }}" class="mb-2">Adresse e-mail</label>
                        {{ form_widget(requestForm.email, { 'attr': {'class': 'form-control mb-3', 'autocomplete': 'email', 'required': true } }) }}
                        {{ form_errors(requestForm.email) }}

                        <div class="text-center">
                            <button class="btn btn-primary" type="submit">
                                Envoyer le mail de réinitialisation
                            </button>
                        </div>

                        <p class="text-center mt-3">
                            <a href="{{ path('app_login') }}">Retour à la connexion</a>
                        </p>

                        {{ form_end(requestForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
