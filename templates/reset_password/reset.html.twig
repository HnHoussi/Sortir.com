{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-lg-5 justify-content-center">
            <div class="col-lg-5">
                <div class="card">
                    <div class="card-body">
                        <h1 class="h3 mb-3 font-weight-normal text-center">Réinitialisez votre mot de passe</h1>

                        {% for flash_error in app.flashes('reset_password_error') %}
                            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                        {% endfor %}

                        {{ form_start(resetForm) }}

                        {{ form_widget(resetForm.plainPassword, { 'attr': {'class': 'form-control mb-3'} }) }}
                        {{ form_errors(resetForm.plainPassword) }}

                        <div class="text-center">
                            <button class="btn btn-primary" type="submit">
                                Réinitialiser le mot de passe
                            </button>
                        </div>

                        {{ form_end(resetForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
