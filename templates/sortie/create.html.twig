{% extends 'base.html.twig' %}

{% block title %}Créer une nouvelle sortie{% endblock %}

{% block body %}
    <div class="container mt-5 mb-5">
        <h1 class="text-center mb-4">? Créer une nouvelle sortie</h1>
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div>
                    {{ form_start(sortie_form) }}

                    {{ form_row(sortie_form.name) }}
                    {{ form_row(sortie_form.startDatetime) }}
                    {{ form_row(sortie_form.duration) }}
                    {{ form_row(sortie_form.registrationDeadline) }}
                    {{ form_row(sortie_form.maxRegistrations) }}
                    {{ form_row(sortie_form.description) }}
                    {{ form_row(sortie_form.photoUrl) }}


                    <div class="d-flex align-items-center justify-content-between">
                        {{ form_row(sortie_form.place) }}
                        <button type="button" class="btn btn-outline-primary ms-2" data-bs-toggle="modal"
                                data-bs-target="#addPlaceModal">
                            Ajouter un lieu
                        </button>
                    </div>

                    <div class="d-flex justify-content-between mt-3">
                        <button type="submit" name="save" class="btn btn-secondary w-48">Enregistrer</button>
                        <button type="submit" name="publish" class="btn btn-success w-48">Publier</button>
                    </div>


                    {{ form_end(sortie_form) }}

                </div>
            </div>

            {# MODAL DE CRÉATION DE LIEU #}
            <div class="modal fade" id="addPlaceModal" tabindex="-1" aria-labelledby="addPlaceModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <form id="placeForm" class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="addPlaceModalLabel">Ajouter un nouveau lieu</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" name="_token" value="{{ csrf_token('place_creation') }}">
                            <div class="mb-3">
                                <label for="place_name" class="form-label">Nom du lieu</label>
                                <input type="text" class="form-control" id="place_name" name="name" required>
                            </div>
                            <div class="mb-3">
                                <label for="place_city" class="form-label">Ville</label>
                                <select class="form-select" id="place_city" name="city" required>
                                    {% for city in cities %}
                                        <option value="{{ city.id }}">{{ city.cityName }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="place_address" class="form-label">Adresse</label>
                                <input type="text" class="form-control" id="place_address" name="address" required>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>

    <script>
        document.getElementById('placeForm').addEventListener('submit', function (event) {
            event.preventDefault();

            const form = this;
            const formData = new FormData(form);

            fetch('{{ path('place_create_ajax') }}', {
                method: 'POST',
                body: formData,
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success && data.place) {
                        const placeSelect = document.getElementById('{{ sortie_form.place.vars.id }}');
                        const newOption = document.createElement('option');
                        newOption.value = data.place.id;
                        newOption.textContent = `${data.place.name} (${data.place.city})`;
                        newOption.selected = true;
                        placeSelect.appendChild(newOption);

                        bootstrap.Modal.getInstance(document.getElementById('addPlaceModal')).hide();
                        form.reset();
                    } else {
                        alert(data.error || 'Erreur inconnue lors de l\'ajout du lieu.');
                    }
                })
                .catch(error => {
                    console.error('Erreur AJAX :', error);
                    alert('Une erreur est survenue lors de la requête.');
                });
        });
    </script>

{% endblock %}
