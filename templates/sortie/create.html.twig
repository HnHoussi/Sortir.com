
{% extends 'base.html.twig' %}


{% block body %}
    <h1>Créer une Sortie</h1>

    <div class="row justify-content-center">
        <div class="col-6">
            {{ form_start(sortie_form) }}

            {{ form_row(sortie_form.name) }}
            {{ form_row(sortie_form.publicationDate) }}
            {{ form_row(sortie_form.startDatetime) }}
            {{ form_row(sortie_form.duration) }}
            {{ form_row(sortie_form.registrationDeadline) }}
            {{ form_row(sortie_form.maxRegistrations) }}
            {{ form_row(sortie_form.description) }}
            {{ form_row(sortie_form.photoUrl) }}

            <div class="d-flex align-items-center justify-content-between">
                {{ form_row(sortie_form.place) }}
                <button type="button" class="btn btn-outline-primary ms-2" data-bs-toggle="modal" data-bs-target="#addPlaceModal">
                    Ajouter un lieu
                </button>
            </div>

            {{ form_row(sortie_form.submit) }}


            {{ form_end(sortie_form) }}
        </div>
    </div>

    {# Modal Bootstrap #}
    <div class="modal fade" id="addPlaceModal" tabindex="-1" aria-labelledby="addPlaceModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <form id="placeForm" class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addPlaceModalLabel">Ajouter un nouveau lieu</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="place_name" class="form-label">Nom du lieu</label>
                        <input type="text" class="form-control" id="place_name" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="place_city" class="form-label">Ville</label>
                        <select class="form-select" id="place_city" name="city" required>
                            {% for city in cities %}
                                <option value="{{ city.id }}">{{ city.cityName }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="place_address" class="form-label">Adresse</label>
                        <input type="text" class="form-control" id="place_address" name="address" required>
                    </div>

                    {# Ajoute d'autres champs si nécessaire #}
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            console.log("Script chargé");

            const form = document.getElementById('placeForm');
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                console.log("Soumission du formulaire");

                const formData = new FormData(form);

                fetch('{{ path("place_create_ajax") }}', {
                    method: 'POST',
                    body: formData
                })
                    .then(response => {
                        console.log("Réponse reçue");
                        return response.json();
                    })
                    .then(data => {
                        console.log("Données JSON :", data);
                        if (data.success) {
                            const select = document.querySelector('#sortie_place');
                            const option = new Option(data.name, data.id, true, true);
                            select.add(option);

                            const modalElement = document.getElementById('addPlaceModal');
                            let modal = bootstrap.Modal.getInstance(modalElement);
                            if (!modal) {
                                modal = new bootstrap.Modal(modalElement);
                            }
                            modal.hide();
                            form.reset();
                        } else {
                            alert(data.error || 'Erreur lors de la création du lieu');
                        }
                    })
                    .catch(error => {
                        console.error("Erreur réseau :", error);
                        alert('Erreur réseau');
                    });
            });
        });
    </script>
{% endblock %}

