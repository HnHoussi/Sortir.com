{% extends 'base.html.twig' %}

{% block title %}Liste des Sorties{% endblock %}

{% block body %}

<div class="container mt-4">
    <h1 class="mb-4">ðŸ“… Sorties disponibles</h1>

    {{ form_start(form) }}
    <div class="row g-3">
        {% for field in form %}
            <div class="col-md-4">
                {{ form_row(field) }}
            </div>
        {% endfor %}
        <div class="col-md-4 d-flex align-items-end">
            <button class="btn btn-success w-100">Rechercher</button>
        </div>
    </div>
    {{ form_end(form) }}
</div>
    <div class="container mt-5">
        <div class="row">
            {% for sortie in sorties %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <a href="{{ path('sortie_detail', {'id': sortie.id}) }}" class="text-decoration-none">
                        <div class="card h-100 shadow-sm text-white border-0"
                             style="background-image: url('{{ sortie.photoUrl ?: asset('images/default.jpg') }}');
                                 background-size: cover;
                                 background-position: center;">
                            <div class="card-body bg-dark bg-opacity-50 d-flex flex-column">
                                <h5 class="card-title">{{ sortie.name }}</h5>
                                <p class="card-text mb-1">
                                    <strong>Date :</strong>
                                    {{ sortie.startDatetime ? sortie.startDatetime|date('d/m/Y H:i') : 'â€”' }}
                                </p>
                                <p class="card-text mb-1">
                                    <strong>DurÃ©e :</strong> {{ sortie.duration }} min
                                </p>
                                <p class="card-text mb-1">
                                    <strong>Lieu :</strong> {{ sortie.place }}
                                </p>
                                <p class="card-text mb-0">
                                    <strong>Organisateur :</strong> {{ sortie.organizer }}
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info text-center">
                        Aucune sortie disponible.
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
