{% extends 'base.html.twig' %}

{% block title %}Liste des Sorties{% endblock %}

{% block body %}

<div class="container mt-4">
    <h1 class="mb-4">Sorties disponibles</h1>

        {% if app.user %}
            {{ form_start(form) }}
            <div class="row g-3">
                {% for field in form %}
                    <div class="col-md-4">
                        {{ form_row(field) }}
                    </div>
                {% endfor %}
                <div>
                    <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary">Rechercher</button>
                </div>
            </div>
            {{ form_end(form) }}
        {% endif %}

        {% if is_granted('ROLE_ADMIN') %}
            <form action="{{ path('sortie_archive') }}" method="post" class="d-inline-flex">
                <button type="submit" class="btn btn-info ms-3">Archiver</button>
            </form>
        {% endif %}
    </div>
</div>

    <div class="container mt-5">
        <div class="row">
            {% for sortie in sorties %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <a href="{{ path('sortie_detail', {'id': sortie.id}) }}" class="text-decoration-none">
                        <div class="card h-100 shadow-sm text-white border-0"
                             style="background-image: url('{{ sortie.photoUrl ? asset('uploads/pictures/sorties/' ~ sortie.photoUrl) : asset('images/default.jpg') }}');
                                 background-size: cover;
                                 background-position: center;">
                            <div class="card-body bg-dark bg-opacity-50 d-flex flex-column">
                                <h5 class="card-title">{{ sortie.name }}</h5>
                                <p class="card-text mb-1">
                                    <strong>Campus :</strong> {{ sortie.campus.campusName }}

                                </p>
                                <p class="card-text mb-1">
                                    <strong>Date :</strong>
                                    {{ sortie.startDatetime ? sortie.startDatetime|date('d/m/Y H:i') : 'â€”' }}
                                </p>
                                <p class="card-text mb-1">
                                    <strong>DurÃ©e :</strong> {{ sortie.duration }} min
                                </p>

                                <p class="card-text mb-1">
                                    <strong>Lieu :</strong> {{ sortie.place }}
                                </p>
                                <p class="card-text mb-0">
                                    <strong>Organisateur :</strong> {{ sortie.organizer }}
                                </p>
                                <p class="card-text mb-0">
                                    <strong>Statut :</strong> {{ sortie.status.statusLabel }}
                                </p>
                                {% if is_granted('ROLE_ADMIN') and sortie.organizer != app.user %}
                                    <a href="{{ path('sortie_annuler', {'id': sortie.id}) }}"
                                       class="btn btn-warning btn-sm mt-2"
                                       onclick="return confirm('Confirmer l\'annulation de cette sortie ?');">
                                        ðŸ›‘ Annuler
                                    </a>
                                {% endif %}


                            </div>
                        </div>
                    </a>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info text-center">
                        Aucune sortie disponible.
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
