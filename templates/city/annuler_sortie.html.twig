{# templates/admin/annuler_sortie.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Annuler une sortie{% endblock %}

{% block body %}
    <h1>Annuler la sortie : {{ sortie.nom }}</h1>

    <form method="post">
        <div class="mb-3">
            <label for="motif">Motif d'annulation :</label>
            <textarea name="motif" id="motif" class="form-control" required></textarea>
        </div>
        <button type="submit" class="btn btn-danger">Annuler la sortie</button>
        <a href="{{ path('admin_liste_sorties') }}" class="btn btn-secondary">Retour</a>
    </form>
{% endblock %}
