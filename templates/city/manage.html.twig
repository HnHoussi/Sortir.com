{% extends 'base.html.twig' %}

{% block title %}Gérer les villes{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1>Gérer les villes</h1>
        </div>

        {# Ce bloc affiche les messages flash #}
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <h3>Ajouter une nouvelle ville</h3>
        <div class="newVille">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary">Ajouter</button>
            {{ form_end(form) }}
        </div>

        <hr class="my-5">

        <h3>Liste des villes</h3>
        <table class="table table-bordered table-hover text-center">
            <thead class="table-primary">
            <tr>
                <th>Ville</th>
                <th>Code Postal</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for city in cities %}
                <tr>
                    <td>{{ city.cityName }}</td>
                    <td>{{ city.postalCode }}</td>
                    <td>{{ city.latitude ?? '—' }}</td>
                    <td>{{ city.longitude ?? '—' }}</td>
                    <td>
                        <a href="{{ path('app_admin_city_edit', {'id': city.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                        <form method="post" action="{{ path('app_admin_city_delete', {'id': city.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette ville ?');" style="display:inline-block;">
                            <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucune ville enregistrée.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
