<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Sortir.com{% endblock %}</title>

    {# bootswatch theme #}
    <link href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.7/dist/flatly/bootstrap.min.css" rel="stylesheet">
</head>
<body class="d-flex flex-column min-vh-100">

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary py-1">
        <div class="container-fluid">
            {# Logo #}
            <a class="navbar-brand d-flex align-items-center" href="{{ path('app_home') }}">
                <img src="{{ asset('images/logoSortir.png') }}" alt="Logo du site sortir" width="30" height="30" class="me-2">
                sortir.com
            </a>

            {# Hamburger button #}
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin_users_list') }}">Liste des utilisateurs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('sortie_archive') }}">Archivage des sorties éligibles</a>
                        </li>
                    {% endif %}
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('sortie_list') }}">Liste des sorties</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('sortie_create') }}">Nouvelle sortie</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('user_profile_details') }}">Mon profil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">Se déconnecter</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <main class="flex-fill container my-4">

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}


        {% block body %}{% endblock %}
    </main>

    {# Footer #}
    <footer class="py-1 bg-primary text-white text-center mt-auto">
        <span> Keep up the good work @ {{ "now"|date("Y") }} Sortir.com</span>
    </footer>

    {# Bootstrap JS for the hamburger button #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
