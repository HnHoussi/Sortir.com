{% extends 'base.html.twig' %}

{% block title %}D√©tail de l'utilisateur{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">üë§ D√©tail de l'utilisateur</h1>

        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-7">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white text-center">
                        <h2 class="h5 mb-0">{{ user.firstName }} {{ user.lastName }}</h2>
                    </div>
                    <div class="card-body">
                        <div class="row align-items-center">
                            {# Avatar on the left #}
                            <div class="col-md-3 text-center mb-3 mb-md-0">
                                {% if user.avatarFilename %}
                                    <img src="{{ asset('uploads/avatars/' ~ user.avatarFilename) }}"
                                         alt="Avatar" class="img-fluid rounded-circle" style="max-width:120px;">
                                {% else %}
                                    <img src="{{ asset('images/default-avatar.png') }}"
                                         alt="Avatar par d√©faut" class="img-fluid rounded-circle" style="max-width:120px;">
                                {% endif %}
                            </div>

                            {# User info on the right #}
                            <div class="col-md-9">
                                <dl class="row mb-0">
                                    <dt class="col-5 text-end">Email</dt>
                                    <dd class="col-7 text-start">{{ user.email }}</dd>

                                    <dt class="col-5 text-end">Pseudo</dt>
                                    <dd class="col-7 text-start">{{ user.pseudo }}</dd>

                                    <dt class="col-5 text-end">T√©l√©phone</dt>
                                    <dd class="col-7 text-start">{{ user.phone ?: 'Non renseign√©' }}</dd>

                                    <dt class="col-5 text-end">Campus</dt>
                                    <dd class="col-7 text-start">{{ user.campus.campusName}}</dd>

                                    <dt class="col-5 text-end">Date de cr√©ation du compte</dt>
                                    <dd class="col-7 text-start">{{ user.createdAt|date('d/m/Y H:i')}}</dd>

                                    {% if user.updatedAt %}
                                        <dt class="col-5 text-end">Derni√®re modification</dt>
                                        <dd class="col-7 text-start">{{ user.updatedAt|date('d/m/Y H:i')}}</dd>
                                    {% endif %}

                                    <dt class="col-5 text-end">R√¥le</dt>
                                    <dd class="col-7 text-start">
                                        {% if 'ROLE_ADMIN' in user.roles %}
                                            <span class="badge bg-danger">Admin</span>
                                        {% else %}
                                            <span class="badge bg-secondary">Invit√©</span>
                                        {% endif %}
                                    </dd>

                                    <dt class="col-5 text-end">Compte</dt>
                                    <td>
                                        {% if '@deleted-user.fr' in user.email %}
                                            Supprim√©
                                        {% elseif user.isActive %}
                                            Actif
                                        {% else %}
                                            Banni
                                        {% endif %}
                                    </td>
                                </dl>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer d-flex justify-content-center gap-2">
                        {% if '@deleted-user.fr' in user.email %}
                            {# Deleted users ‚Üí only allow returning to the list #}
                            <a href="{{ path('admin_users_list') }}" class="btn btn-secondary">Retour √† la liste</a>
                        {% else %}
                            {# Active or banned users #}
                            {% if user.isActive %}
                                {# Active users ‚Üí normal buttons #}
                                {% if 'ROLE_ADMIN' not in user.roles %}
                                    <a href="{{ path('admin_edit_user', {id: user.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                                {% endif %}
                                <a href="{{ path('admin_user_delete', {id: user.id}) }}" class="btn btn-danger btn-sm"
                                   onclick="return confirm('√ätes-vous s√ªr de vouloir supprimer cet utilisateur ?');">Supprimer</a>
                                <a href="{{ path('admin_user_toggle_ban', {id: user.id, redirect: 'detail'}) }}" class="btn btn-dark btn-sm"
                                   onclick="return confirm('√ätes-vous s√ªr de vouloir bannir cet utilisateur ?');">Bannir</a>
                            {% else %}
                                {# Banned users ‚Üí allow R√©activer and Supprimer; Modifier only for admins #}
                                {% if 'ROLE_ADMIN' in app.user.roles %}
                                    <a href="{{ path('admin_edit_user', {id: user.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                                {% endif %}
                                <a href="{{ path('admin_user_delete', {id: user.id}) }}" class="btn btn-danger btn-sm"
                                   onclick="return confirm('√ätes-vous s√ªr de vouloir supprimer cet utilisateur ?');">Supprimer</a>
                                <a href="{{ path('admin_user_toggle_ban', {id: user.id, redirect: 'detail'}) }}" class="btn btn-success btn-sm"
                                   onclick="return confirm('√ätes-vous s√ªr de vouloir r√©activer cet utilisateur ?');">R√©activer</a>
                            {% endif %}

                            {# Always allow returning to the list #}
                            <a href="{{ path('admin_users_list') }}" class="btn btn-secondary">Retour √† la liste</a>
                        {% endif %}
                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}
